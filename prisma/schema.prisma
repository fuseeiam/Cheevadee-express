// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String?   @unique
  mobile    String?   @unique
  password  String
  role      ROLE      @default(USER)
  bookings  Booking[]
}

enum ROLE {
  ADMIN
  USER
}

model Booking {
  id            Int           @id @default(autoincrement())
  userId        Int
  roomId        Int
  arrival       DateTime
  departure     DateTime
  paymentSlip   String?
  paymentStatus PaymentStatus @default(PENDING)
  user          User          @relation(fields: [userId], references: [id])
  room          Room          @relation(fields: [roomId], references: [id])
}

enum PaymentStatus {
  COMPLETED
  CHECKING
  PENDING
}

model Room {
  id            Int       @id @default(autoincrement())
  roomtype      String
  bed           String
  picture       String?
  roomSize      String
  veiw          String
  price         Int
  isMaintaining Boolean
  Booking       Booking[]
}
