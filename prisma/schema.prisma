// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String? @unique
  mobile    String? @unique
  password  String
}

model Booking {
  id             Int           @id @default(autoincrement())
  userId         Int
  arrival        DateTime
  departure      DateTime
  payment_slip   String?
  payment_status PaymentStatus @default(PENDING)
  room_id        Int
}

model Room {
  id          Int    @id @default(autoincrement())
  rootype_id  Int
  bed         String
  picture     String
  room_size   String
  veiw        String
  amount_room Int
  price       Int
}

model RoomType {
  id       Int    @id @default(autoincrement())
  roomtype String
}

enum PaymentStatus {
  COMPLETED
  CHECKING
  PENDING
}

model Admin {
  id        Int    @id @default(autoincrement())
  userId    Int
  firstName String
  lastName  String
  password  String
}
